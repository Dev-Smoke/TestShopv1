@using System.Globalization;
@model List<Product>

<div class="w-100 btn-group" role="group">
    <a asp-controller="Product" asp-action="Create" class="btn btn-primary mx-2">
        <i class="bi bi-plus-circle"></i> &nbsp; Neues Produkt erstellen
    </a>
</div>
<table  class="table table-bordered table-striped " style="width:100%">
    <thead class="table-secondary">
        <tr>
            <th>
                ImagePath
            </th>
            <th>
                Name
            </th>
            <th>
                Beschreibung
            </th>
            <th>
                Kategorie
            </th>
            <th>
                Hersteller
            </th>
            <th>
               Preis
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var obj in Model)
        {
        <tr>
            <td width="50%">
                @obj.ImagePath
            </td>
            <td width="50%">
                @obj.Name
            </td>
            <td width="30%">
                @obj.Description
            </td>
            <td width="30%">
                @obj.Category.Name
            </td>
            <td width="30%">
                @obj.Manufacturer.Name
            </td>
            <td width="30%">
                @obj.UnitPriceNetto.ToString("C", CultureInfo.CreateSpecificCulture("de-DE"))
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                    <button onclick="onClickedDeleteButton(@obj.Id)" @*asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"*@
                       class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</button>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts{ 
    <script>
        function onClickedDeleteButton(id) {
            //plugin
            Swal.fire({
                title: 'Möchtest du das Produkt wirklich löschen?',
                icon: 'error',
                showCloseButton: true,
                focusConfirm: false,
                confirmButtonText:
                    'Ja, löschen!',
            }).then((result) => {
                if (result.isConfirmed)/*habe ich bestätigt oder nicht*/ {

                    // Backend call to delete job posting by id
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("Delete")",
                        data: { id: id },//übergen id sprechen ie action dann an
                        success: function (msg) { //wenn der call erfolgreich war leg los und führe aus
                            Swal.fire('Wurde gelöscht!', '', 'success').then((result) => { ///mit then sonst sieht man nichts
                                location.reload();// lade die seite neu
                            });
                        },
                        error: function (msg) {//wenn nicht dann gib das aus
                            Swal.fire('Ups, etwas ist schief gelaufen!', '', 'error')
                        }
                    });
                }
            })
        }
    </script>

    <script src="~/js/product.js"></script>
}