@using System.Globalization;
@model List<Product>

<div class="w-100 btn-group" role="group">
    <a asp-controller="Product" asp-action="Create" class="btn btn-primary mx-2">
        <i class="bi bi-plus-circle"></i> &nbsp; Neue Kategorie erstellen
    </a>
</div>
<table class="table table-bordered table-striped " style="width:100%">
    <thead class="table-secondary">
        <tr>
            <th>
                Produkte
            </th>
            <th>
                Description
            </th>
            <th>
                Kategorie
            </th>
            <th>
                Hersteller
            </th>
            <th>
                Preis
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.Description
                </td>
                <td width="30%">
                    @obj.Category.Name
                </td>
                <td width="30%">
                    @obj.Manufacturer.Name
                </td>
                <td width="30%">
                    @obj.UnitPriceNetto.ToString("C",CultureInfo.CreateSpecificCulture("de-DE"))
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
                            class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>

