
@model ProductVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class=" p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Name" class="form-control border-0 shadow" />
                    <label asp-for="Product.Name" class="ms-2"></label>
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Product.Description" class="form-control border-0 shadow"> </textarea>
                    <label asp-for="Product.Description" class="ms-2"></label>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.UnitPriceNetto" class="form-control border-0 shadow" type="number" step="0.01" />
                    <label asp-for="Product.UnitPriceNetto" class="ms-2"></label>
                    <span asp-validation-for="Product.UnitPriceNetto" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                        <option disabled selected>--Wähle eine Kategorie--</option>
                    </select>
                    <label asp-for="Product.CategoryId" class="ms-2"></label>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Product.ManufacturerId" asp-items="@Model.ManufacturList" class="form-select border-0 shadow">
                        <option disabled selected>--Wähle einen Hersteller--</option>
                    </select>
                    <label asp-for="Product.CategoryId" class="ms-2"></label>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-primary   form-control">
                            zur Übersicht
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>

@section Scripts{ 
    @{ 
        <partial name="_ValidationScriptsPartial" />
    }
}