@using TestShopv1.Services

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestShopv1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/TestShopv1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-secondary border-bottom mb-3 ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TestShopv1</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Category" asp-action="Index">Kategorien</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Product" asp-action="Index">Produkte</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Product" asp-action="GetAll">Json</a>
                        </li>
                        <!-- #region Account -->
                        <ul class="navbar-nav flex-grow-1  d-flex">
                            @if (!User.Identity.IsAuthenticated)
                                 {
                                     <li class="nav-item">
                                         <a class="nav-link text-info" asp-area="" asp-controller="Account" asp-action="Register">Registrieren</a>
                                     </li>
                                     <li class="nav-item">
                                         <a class="nav-link text-info" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                                     </li>
                                 }
                                 else
                                 {
                                     <ul class="navbar-nav flex-grow-1 justify-content-end d-flex">
                                         <li class="nav-item">
                                             <a class="nav-link text-danger" asp-area="" asp-controller="Home" asp-action="Index">@User.GetName()</a>
                                         </li>
                                         <li class="nav-item">
                                             <a class="nav-link text-danger" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                         </li>
                                         <li class="nav-item">
                                             <a class="nav-link text-info" asp-area="" asp-controller="Card" asp-action="Index"><i class="bi bi-cart"></i> &nbsp; (0)</a>
                                         </li>
                                     </ul>
                                 }

                        <!-- #endregion -->
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="min-height: 87.8vh;">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-bg-danger bg-secondary">
        <div class="container">
            &copy; 2023 - TestShopv1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

            <label class="form-check-label">
                <a href="https://www.ages.at/agb">terms and conditions</a>.
            </label>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/jgio009k05lmbp6zj4pmhtvzgklkeulfvobdtbs3ot52o5tc/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

