@model IEnumerable<Product>



<div class="row pb-3">
    <form asp-controller="Home" asp-action="Index" method="get">
        <p>
            <input type="text" name="search" />
            <button type="submit" value="Filter" class="btn btn-secondary">Suchen!</button>
        </p>
        <button type="submit" value="Filter" class="btn btn-secondary">Suchen!</button>

    </form>
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow  border-top border-5 rounded">
                        @if (product.ImagePath != null && product.ImagePath.Count() > 0)
                        {
                            <img src="@product.ImagePath" class="card-img-top  rounded" width="500" height="400" />
                        }
                        else
                        {
                            <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                        }

                        <div class="card-body pb-0">
                            <div class="pl-1" style="height:100px">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
                                <p class="card-title text-warning text-center">by <b>@product.Manufacturer.Name</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    Preis:
                                    <span class="text-danger">
                                        @product.UnitPriceNetto.ToString("C", CultureInfo.CreateSpecificCulture("de-DE"))
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details"
                               asp-controller="Home"
                               asp-route-productId="@product.Id"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>